@page "{id:int}"
@model EditBookModel
<form method="post">
    <label asp-for="Title"></label>
    <input asp-for="BookData.Title" name="Title" />

    <label asp-for="Author"></label>
    <input asp-for="BookData.Author" name="Author" />

    <label asp-for="Price"></label>
    <input asp-for="BookData.Price" name="Price" />

    <button type="submit">Update</button>
</form>

@if (Model.BookData != null)
{
    <div>
        <h2>Updated Book Details:</h2>
        <p><strong>Title:</strong> @Model.BookData.Title</p>
        <p><strong>Author:</strong> @Model.BookData.Author</p>
        <p><strong>Price:</strong> @Model.BookData.Price</p>
    </div>
}